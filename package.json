{
  "name": "react-use-controller",
  "version": "3.0.0-0",
  "description": "Easy to use state controllers using classes and hooks",
  "license": "MIT",
  "keywords": [
    "react",
    "hooks"
  ],
  "repository": "https://github.com/gabeklein/use-controller",
  "author": {
    "name": "Gabe Klein",
    "email": "gabe@termtm.com",
    "url": "https://github.com/gabeklein"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "types": "index.d.ts",
  "files": [
    "lib/",
    "index.d.ts"
  ],
  "scripts": {
    "build": "tsc --sourceMap false",
    "watch": "tsc --watch --sourceMap",
    "start": "npm run --prefix examples start",
    "prepare": "npm install --prefix examples",
    "prebuild": "rm -rf lib/",
    "preversion": "npm run build; jest",
    "postversion": "npm publish",
    "postpublish": "git push; git push --tags; rm -rf lib",
    "test": "jest --watchAll"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^2.0.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/react": "^16.8.0",
    "jest": "^24.9.0",
    "react": "^16.8.0",
    "react-test-renderer": "^16.9.0",
    "typescript": "^3.5.3",
    "ts-jest": "^24.1.0"
  }
}
